<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBar.TabView</item>
        <item name="android:actionBarTabBarStyle">@style/AppTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.ActionBar.TabText</item>
        <item name="android:logo">@drawable/logo_inverted</item>
        <item name="android:colorPrimaryDark">@color/blueappdark</item>
        <item name="android:colorPrimary">@color/blueapp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:editTextStyle">@style/editText</item>
    </style>

    <style name="AppTheme.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_home_background_state</item>
    </style>

    <style name="AppTheme.ActionBar.TabText" parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_home_background_state</item>
    </style>

    <style name="editText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/blueapp</item>
    </style>

    <style name="dropdown_custom">
        <item name="android:shape">rectangle</item>
        <item name="android:solidColor">#FFFFFF</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:strokeWidth">1</item>
    </style>

    <style name="text_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edittext_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:editable">true</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_state</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="tabwidget_main">
        <item name="android:background">@drawable/tab_main_background_state</item>
    </style>

    <color name="transparent">#00000000</color>
    <color name="blueapp">#6666ff</color>
    <color name="blueapplight">#F0F0FF</color>
    <color name="blueappdark">#4747B2</color>
    <color name="opaque_back">#29000000</color>
    <color name="black">#000000</color>
    <color name="gray">#bdc3c7</color>

